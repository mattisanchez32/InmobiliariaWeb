@model IEnumerable<Inmobiliaria.Models.Alquiler>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdAlquiler)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInmueble)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdAlquiler)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @(item.Inqui.Nombre + " " + item.Inqui.Apellido)
            </td>
            <td>
                @(item.Inmu.Direccion + " " + item.Inmu.Tipo)
            </td>
            <td>
                @Html.ActionLink("Pagos", "ListaPagos", "Pagos", new { id = item.IdAlquiler }) |
                @Html.ActionLink("Edit", "Edit", new { id = item.IdAlquiler }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdAlquiler })
            </td>
        </tr>
}
    </tbody>
</table>
