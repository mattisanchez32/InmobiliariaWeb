@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Create";
}

<h1>Crear Pago</h1>

<h4>Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NroPago" class="control-label"></label>
                <input asp-for="NroPago" class="form-control" />
                <span asp-validation-for="NroPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlquilerId" class="control-label"></label>
                <select class="form-control" name="AlquilerId">
                    @foreach (var item in (IList<Alquiler>)ViewBag.Alquileres)
                    {
                        <option value="@item.IdAlquiler">@(item.Inqui.Apellido + " "+ item.Inqui.Nombre + " " + item.Inmu.Direccion)</option>
                    }
                </select>
                <span asp-validation-for="AlquilerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista de Alquileres</a>
</div>

